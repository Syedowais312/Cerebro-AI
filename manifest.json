{
  "manifest_version": 3,
  "name": "Cerebro - AI Tab Organizer",
  "version": "1.0",
  "description": "Organize and summarize your Chrome tabs intelligently using AI.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "sidePanel",
    "tabGroups"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
   
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
